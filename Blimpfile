Blimpy.fleet do |fleet|
  fleet.add(:aws) do |ship|
    ship.name = 'prosody-test'
    ship.ports = [22, 8080]
    ship.image_id = 'ami-4038b470' # Ubuntu 12.04 LTS in us-west-2
    ship.region = 'us-west-2'
    ship.livery = Blimpy::Livery::Puppet.configure do |p|
      p.manifest_path = './tests/init.pp'
      p.module_path = './tests/modules'
    end
  end
end
